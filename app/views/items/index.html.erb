<h3>Categories</h3>

<%= notice %>

<% @categories.each do |category| %>
<ul>
  <li><%= link_to category.slug.capitalize, category_url(category.slug) %></li>
</ul>
<% end %>

<hr>

<h3>Items:</h3>
<%= link_to "Add Item", new_item_url, class: "btn btn-success" %>
<ul>
  <% @items.each do |item| %>
    <li>
      <h3><%= item.name %></h3>
      <% if item.image_content_type.present?  %>
        <%= link_to image_tag(item.image.url(:small)), item_url(item.id) %>
      <% else %>
        <%= link_to image_tag(item.photo_url, width: 175), item_url(item.id) %>
      <% end %>
      <p><b>Description:</b> <%= item.description %></p>
      <p><b>Daily Price:</b> $<%= item.daily_price %></p>
      <p><b>Weekly Price:</b> $<%= item.weekly_price %></p>
      <p><b>Monthly Price:</b> $<%= item.monthly_price %></p>
      <p><b>Category:</b> <%= item.category.name %></p>
      <p>
        <% if signed_in? && item.user_id == current_user.id %>
          <%= link_to "View", item_url(item.id), class: "btn" %> &nbsp;|&nbsp;
          <%= link_to "Edit", edit_item_url(item.id), class: "btn" %> &nbsp;|&nbsp;
          <%= link_to "86 This", item_url(item.id), method: :delete, confirm: "You sure?", class: "btn btn-danger" %>
          <% end %>
      </p>
    </li>
    <hr>
  <% end %>
</ul>
