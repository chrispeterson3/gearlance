
<div class="row-fluid">
  <h1 class="withsubhead">Rent gear today.</h1>
  <h3>Try out gear from people just like you.</h3>
</div>

<div class="row-fluid">
	<div class="bxslider">
	  <% @items.sample(9).each do |item| %>
	  <a href="<%= item_url(item.id) %>"><div class="slide"><img src="http://placehold.it/300x300" title="<%= item.name %> | $<%= item.daily_price %> per day"></div></a>
	  <% end %>
	</div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
  $('.bxslider').bxSlider({
  	auto: true,
  	captions: true,
 	slideWidth: 300,
    minSlides: 1,
    maxSlides: 3,
    slideMargin: 10
  });
});
</script>