<div class="row-fluid">
  <h1 class="withsubhead">Rent gear today.</h1>
  <h3>Try out gear from people just like you.</h3>
</div>
<ul>
  <% @items.sample(3).each do |item| %>
    <li><%= image_tag item.photo_url, width: 300 %></li>
    <li><%= item.name %></li>
    <li>$ <%= item.weekly_price %></li>
    <li><%= link_to "Reserve Now", item_url(item.id), class: "btn btn-primary" %></li><br><!-- need to create the Reserve an item functionality for this -->
  <% end %>
</ul>