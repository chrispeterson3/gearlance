        <input type="text" id="from" name="from" />
        <label for="to">to</label>
        <input type="text" id="to" name="to" />
 -->      </fieldset>

      <!-- Button to trigger modal -->
      <a href="#myModal" role="button" class="btn btn-success" data-toggle="modal" style="margin-top: 10px;">Send Rental Request</a>

      <!-- Modal -->
      <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">Send Request</h3>
        </div>
        <div class="modal-body">
          <p>Hey <%= @item.user.first_name %>,</p>
          <p>I'm interested in renting your <%= @item.name %></p>

            <%= form_for Reservation.new do |r| %>

              <%= r.hidden_field :user_id, value: session[:user_id] %>
              <%= r.hidden_field :item_id, value: @item.id %>

              <%= r.label :from %>
              <%= r.text_field :start_date, :placeholder => "yyyy/mm/dd"  %>

              <%= r.label :to %>
              <%= r.text_field :end_date, :placeholder => "yyyy/mm/dd" %>

          <p>Does that work for you?</p>
          <textarea rows="3" placeholder="Say something nice..."></textarea>

        </div>
          <div class="modal-footer">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
          <%= r.submit "Send Request", class: "btn btn-success" %>
          </div>
          <% end %>
      </div>
    </form>


    <div class="well">
      <legend>About Me</legend>
