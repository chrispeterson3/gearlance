<%= form_for Reservation.new do |r| %>

  <%= r.hidden_field :user_id, value: session[:user_id] %>
  <%= r.hidden_field :item_id, value: @item.id %>

  <%= r.label :from %>
  <%= r.text_field :start_date, value: Date.today  %>

  <%= r.label :to %>
  <%= r.text_field :end_date, value: Date.tomorrow %>

  <br><br>
  <p>Does that work for you?</p>
  <%= r.text_area :comments, placeholder: "Say something nice...", rows: 3 %>

  <br><br>
  <p>
    <%= r.submit "Send Request", class: "btn btn-success", remote: true %>
  </p>

<% end %>
