<div class="span9">
<% if @user.reservations.present? %>
<h3>My Reservations</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Category</th>
        <th>Name</th>
        <th>Description</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Rental Days</th>
        <th>Estimate</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @user.reservations.each do |r| %>
      <tr>
          <td><%= r.id %></td>
          <td><%= r.item.category.name %></td>
          <td><%= r.item.name %></td>
          <td><%= r.item.description %></td>
          <td><%= r.start_date.strftime("%A %b %d, %Y") %></td>
          <td><%= r.end_date.strftime("%A %b %d, %Y") %></td>
          <td><%= r.rental_period %></td>
          <td>$ <%= r.estimate %></td>

          <td><%= link_to 'Show', reservation_url(r.id), class: 'btn btn-primary' %></td>
          <% if @user.id == session[:user_id] %>
            <td><%= link_to 'Edit', edit_reservation_url(r.id), class: 'btn btn-primary' %></td>
            <td><%= link_to '86 for life', reservation_url(r.id), class: 'btn btn-danger', method: 'delete', data: { confirm: "Do you really want to delete this item?" } %></td>
          <% end %>
        <% end %><br>
      </tr>
    </tbody>
  </table>
<% end %>


<% if @user.items.count > 0 %>
<h3>My Gear</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Category</th>
        <th>Name</th>
        <!-- <th>Description</th> -->
        <th>Daily Price</th>
        <th>Weekly Price</th>
        <th>Monthly Price</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @user.items.each do |item| %>
        <tr>
          <td><% if item.image_content_type.present?  %>
            <%= link_to image_tag(item.image.url(:small)), item_url(item.id) %>
          <% else %>
            <%= link_to image_tag(item.photo_url), item_url(item.id) %>
          <% end %>
          </td>
          <td><%= item.category.name %></td>
          <td><%= item.name %></td>
          <!-- <td><%= item.description %></td> -->
          <td>$<%= item.daily_price %></td>
          <td>$<%= item.weekly_price %></td>
          <td>$<%= item.monthly_price %></td>
          <td><%= link_to 'Show', item, class: 'btn btn-primary' %></td>
          <% if @user.id == session[:user_id] %>
            <td><%= link_to 'Edit', edit_item_url(item), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Delete', item, class: 'btn btn-danger', method: 'delete', data: { confirm: "Do you really want to delete this item?" } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% elsif @user.id == session[:user_id] %>
  <h3>List some gear!</h3>
  <%= link_to "List my gear!", new_item_url, class: "btn" %>
<% else %>

<% end %>
</div><!-- span -->


</div><!-- row -->




